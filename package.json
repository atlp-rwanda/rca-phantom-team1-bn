{
  "name": "phantom-backend",
  "version": "1.0.0",
  "description": "Elevate the public transport experience",
  "main": "src/index.ts",
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "tsc && nodemon dist/index",
    "test": "tsc && nyc mocha",
    "lint": "eslint src"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": "true",
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
  },
  "keywords": [
    "buses",
    "transport",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
  },
  "homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
  "dependencies": {
    "@types/express": "^4.17.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lowdb": "^5.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.1",
    "typescript": "^3.9.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/cors": "^2.8.13",
    "@types/mocha": "^8.0.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^13.13.15",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "ts-node": "^9.0.0"
  }
}
