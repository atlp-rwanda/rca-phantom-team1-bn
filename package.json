{
    "name": "phantom-backend",
    "version": "1.0.0",
    "description": "Elevate the public transport experience",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc",
        "start": "tsc && node dist/index",
        "dev": "tsc && nodemon dist/index",
        "test": "tsc && nyc mocha --require ts-node/register src/test/**/*.ts",
        "lint": "eslint src --fix",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
    },
    "mocha": {
        "extension": [
            "ts"
        ],
        "spec": "src/test/**/*.spec.ts",
        "require": "ts-node/register"
    },
    "nyc": {
        "extends": "@istanbuljs/nyc-config-typescript",
        "reporter": [
            "text-summary",
            "lcov"
        ],
        "all": "true",
        "exclude": [
            "dist",
            "coverage"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
    },
    "keywords": [
        "buses",
        "transport",
        "typescript"
    ],
    "require": "ts-node/register",
    "author": "ceelogre",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
    },
    "homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
    "dependencies": {
        "@types/express": "^4.17.6",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@types/chai": "^4.3.4",
        "@types/mocha": "^8.2.3",
        "@types/node": "^13.13.15",
        "@types/sinon": "^10.0.13",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "assert": "^2.0.0",
        "chai": "^4.3.7",
        "eslint": "^8.35.0",
        "eslint-config-prettier": "^8.7.0",
        "mocha": "^8.4.0",
        "nyc": "^15.1.0",
        "prettier": "^2.8.4",
        "sinon": "^15.0.1",
        "source-map-support": "^0.5.19",
        "ts-node": "^10.8.1",
        "typescript": "^4.9.5"
    }
}
